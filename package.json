{
  "name": "orejime",
  "private": true,
  "version": "3.0.0",
  "description": "The light and accessible consent manager.",
  "homepage": "https://orejime.empreintedigitale.fr",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/empreinte-digitale/orejime.git"
  },
  "bugs": {
    "url": "https://github.com/empreinte-digitale/orejime/issues"
  },
  "keywords": [
    "cookie",
    "consent",
    "gdpr",
    "compliance"
  ],
  "author": "Emmanuel Pelletier <e.pelletier@empreintedigitale.fr>",
  "contributors": [
    "FÃ©lix Girault <felix.girault@empreintedigitale.coop>"
  ],
  "license": "BSD-3-Clause",
  "scripts": {
    "start": "parcel serve --target site",
    "start-dsfr": "parcel serve --target dsfr",
    "serve": "http-server dist --gzip --brotli",
    "build": "npm run clean-build && parcel build --no-cache",
    "clean-build": "rm -Rf ./dist/orejime*"
  },
  "browser": "dist/orejime.js",
  "legacy": "dist/orejime.js",
  "modern": "dist/orejime.mjs",
  "types": "dist/types.d.ts",
  "targets": {
    "browser": false,
    "legacy": {
      "context": "browser",
      "source": "src/app/orejime.ts",
      "includeNodeModules": true,
      "optimize": true,
      "engines": {
        "browsers": "ie 11"
      }
    },
    "modern": {
      "context": "browser",
      "source": "src/app/orejime.ts",
      "outputFormat": "esmodule",
      "includeNodeModules": true,
      "optimize": true,
      "engines": {
        "browsers": "defaults, not safari TP and supports es6-module"
      }
    },
    "site": {
      "source": "src/site/index.html",
      "distDir": "dist-site"
    }
  },
  "parcel-namer-rewrite": {
    "rules": {
      "ui(.*).js": "orejime-ui$1{.hash}.js"
    }
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat"
  },
  "dependencies": {
    "assign-deep": "^1.0.1",
    "js-cookie": "^3.0.1",
    "preact": "^10.6.3",
    "react-modal": "^3.14.4"
  },
  "devDependencies": {
    "@gouvfr/dsfr": "^1.2.1",
    "@parcel/transformer-sass": "^2.0.1",
    "@parcel/transformer-yaml": "^2.0.1",
    "@types/jest": "^27.0.3",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/react-modal": "^3.13.1",
    "http-server": "^14.0.0",
    "jest": "^27.4.3",
    "parcel": "^2.0.1",
    "parcel-namer-rewrite": "^2.0.0-rc.1"
  }
}
